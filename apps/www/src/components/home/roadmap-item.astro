---
import RoadmapItemState from "@/components/home/roadmap-item-state.astro";

type Props = {
  title: string;
  description: string;
  state: "NOT_STARTED" | "IN_PROGRESS" | "SHIPPED";
};

const { title, description, state } = Astro.props;
---

<div
  class="flex flex-col gap-3 col-span-6 sm:col-span-2 bg-neutral-100 border border-neutral-200 px-8 py-6 rounded-lg"
>
  <div class="w-full inline-flex items-center justify-between">
    <h3>{title}</h3>
    <div>
      <RoadmapItemState state={state}/>
    </div>
  </div>

  <p class="max-w-64">{description}</p>
</div>
