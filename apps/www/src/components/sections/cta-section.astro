---
import Button from "../ui/Button.astro";
---

<section class="w-full bg-white" id="cta">
  <div
    class="mx-auto flex min-h-[56svh] w-full max-w-5xl flex-col items-center justify-center gap-6 px-4 py-16 text-center sm:min-h-[62svh] sm:px-6 sm:py-20 lg:min-h-[68svh] lg:px-0 lg:py-24"
  >
    <h2
      class="w-full max-w-[44.375rem] font-display text-4xl font-semibold leading-[1.1] tracking-tight text-neutral-900 sm:text-5xl lg:text-[4rem]"
    >
      Start monitoring now.
    </h2>

    <div class="flex flex-wrap items-center justify-center gap-3">
      <Button>Join Waitlist</Button>
      <Button href="#demo" variant="secondary">Open Demo</Button>
    </div>
  </div>
</section>
